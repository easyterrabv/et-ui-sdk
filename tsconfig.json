{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "target": "es2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/helpers/**/*.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "**/__tests__/*",
    "**/*.cy.ts",
    "**/*.d.ts",
    "sandbox/**/*.ts",
    "sandbox/**/*.vue",
    "node_modules/**/*"
  ]
}
