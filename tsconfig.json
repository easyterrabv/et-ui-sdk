{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "ts-node": {
        "compilerOptions": {
            "module": "es2015",
            "moduleResolution": "node"
        }
    },
    "include": [
        "env.d.ts",
        "src/**/*.ts",
        "src/**/*.vue",
        "sandbox/**/*.ts",
        "sandbox/**/*.vue"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*",
        "**/*.cy.ts"
    ]
}