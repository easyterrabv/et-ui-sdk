{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "ts-node": {
        "compilerOptions": {
            "module": "es2015",
            "moduleResolution": "node"
        }
    },
    "include": [
        "src/**/*.ts",
        "src/helpers/**/*.ts",
        "src/**/*.vue"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*",
        "**/*.cy.ts",
        "**/*.d.ts",
        "sandbox/**/*.ts",
        "sandbox/**/*.vue"
    ]
}