{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "ts-node": {
        "compilerOptions": {
            "module": "es2015",
            "moduleResolution": "node"
        }
    },
    "compilerOptions": {
        "composite": true,
        "target": "es5",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "allowJs": true,
        "types": ["cypress", "node"]
    },
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue"
    ],
    "exclude": ["node_modules", "**/__tests__/*"]
}